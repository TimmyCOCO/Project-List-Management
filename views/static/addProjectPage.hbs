<!--
    This page displays the form of adding new projects
-->

<div class="row">
    <main class="col-md-12">

        <form action="/project/add" method="post">
            <fieldset>
                <legend>Project Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Project Name:</label>
                            <input class="form-control" name="projectName" type="text" />
                        </div>

                        <div class="form-group">
                            <label>Project Description:</label>
                            <textarea class="form-control" name="projectDescription" rows="8"></textarea>
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Add project" /><br /><br /><br />
        </form>

    </main>
</div>